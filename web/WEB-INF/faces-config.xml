<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>studentBackingBean</managed-bean-name>
        <managed-bean-class>edu.umt.jsf.beans.StudentBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>tutorBackingBean</managed-bean-name>
        <managed-bean-class>edu.umt.jsf.beans.TutorBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>newLocationBackingBean</managed-bean-name>
        <managed-bean-class>edu.umt.jsf.beans.SessionBackingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <!-- NAVIGATION RULES -->
    <navigation-rule>
        <navigation-case>
            <from-outcome>student-details</from-outcome>
            <to-view-id>/pages/student-details.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-outcome>add-student</from-outcome>
            <to-view-id>/pages/newstudent.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>